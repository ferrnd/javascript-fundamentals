let dia = 7
switch (dia) {
    case 1:
        console.log(`Domingo é o ${dia} dia da semana!`);
        break;
    case 2:
        console.log(`Segunda - Feira é o ${dia} dia da semana!`);
        break;
    case 3:
        console.log(`Terça - Feira é o ${dia} dia da semana!`);
        break;
    case 4:
        console.log(`Quarta - Feira é o ${dia} dia da semana!`);
        break;
    case 5:
        console.log(`Quinta - Feira é o ${dia} dia da semana!`);
        break;
    case 6:
        console.log(`Sexta - Feira é o ${dia} dia da semana!`);
        break;
    case 7:
        console.log(`Sábado é o ${dia} dia da semana!`);
        break;
    default:
        console.log('Dia da semana inválido')
}